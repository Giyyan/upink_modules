                                attrs="{'invisible': ['&amp;',
                                '|', ('state', '!=', 'inwork'), '|', ('check_i', '=', False), ('check_x', '=', False),
                                '|', ('state', '!=', 'delegated'), ('check_m', '=', False)
                                ]}"
                                />

                        <!-- inwork -> delegated -->
                        <button string="Задача делегирована"
                                name="action_delegated"
