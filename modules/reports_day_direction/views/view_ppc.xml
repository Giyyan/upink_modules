<?xml version="1.0" encoding="UTF-8" ?>
<openerp>
    <data>
        <menuitem id="menu_report_day_direction" parent="process_launch.menu_process" name="Ежедневные отчеты направлений" sequence="100"/>
        <menuitem id="menu_report_day_direction_settings" name="Настройки" parent="menu_report_day_direction" sequence="99"/>


        <record model="ir.ui.view" id="view_report_day_ppc_tree">
            <field name="name">Ежедневный отчет направлений - PPC</field>
            <field name="model">report.day.ppc</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="partner_id" />
                    <field name="service_id" />
                    <field name="specialist_id" />
                    <field name="domain_zone" />
                    <field name="campaign" />
                    <field name="date" />
                    <field name="cash" />
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="view_report_day_ppc_search">
            <field name="name">Ежедневный отчет направлений - PPC</field>
            <field name="model">report.day.ppc</field>
            <field name="type">search</field>
            <field name="priority" eval="1"/>
            <field name="arch" type="xml">
                <search>
                    <field name="date_start" string="C" />
                    <field name="date_end" string="По" />
                    <field name="partner_id" />
                    <field name="service_id" />
                    <field name="specialist_id" />
                    <field name="domain_zone" />
                    <field name="campaign" />
                    <field name="date" />
                    <newline/>
                    <group expand="0" string="Группировать по...">
                        <filter string="Партнеру" icon="terp-partner" name="Customer" context="{'group_by':'partner_id'}"/>
                        <separator orientation="vertical"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="window_report_day_ppc" model="ir.actions.act_window">
            <field name="name">PPC</field>
            <field name="res_model">report.day.ppc</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="view_report_day_ppc_tree"/>
            <field name="search_view_id" ref="view_report_day_ppc_search"/>
            <field name="context">{'search_default_date_start': time.strftime('%Y-%m-01'), 'search_default_date_end': time.strftime('%Y-%m-%d')}</field>
        </record>


        <record model="ir.ui.view" id="view_report_day_ppc_statistic_tree">
            <field name="name">PPC</field>
            <field name="model">report.day.ppc.statistic</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree editable="top">
                    <field name="name" />
                    <field name="campaign" />
                    <field name="date" />
                    <field name="cash" />
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="view_report_day_ppc_statistic_search">
            <field name="name">PPC</field>
            <field name="model">report.day.ppc.statistic</field>
            <field name="type">search</field>
            <field name="priority" eval="1"/>
            <field name="arch" type="xml">
                <search>
                    <field name="name" />
                    <field name="campaign" />
                    <field name="date" />
                    <field name="cash" />
                </search>
            </field>
        </record>

        <record id="window_report_day_ppc_statistic" model="ir.actions.act_window">
            <field name="name">PPC</field>
            <field name="res_model">report.day.ppc.statistic</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="view_report_day_ppc_statistic_tree"/>
            <field name="search_view_id" ref="view_report_day_ppc_statistic_search"/>
            <field name="context">{}</field>
        </record>

        <menuitem action="window_report_day_ppc" id="menu_report_day_ppc" parent="menu_report_day_direction" sequence="1"/>
        <menuitem id="menu_report_day_settings_ppc" action="window_report_day_ppc_statistic" name="Доп. модель PPC" parent="menu_report_day_direction_settings" sequence="1"/>
    </data>
</openerp>