<?xml version="1.0" encoding="UTF-8" ?>
<openerp>
    <data>
        <record model="ir.ui.view" id="view_rep_site">
            <field name="name">Отчет по site</field>
            <field name="model">report.day.site</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree editable = 'top'>
                    <field name="partner_id" readonly="1" />
                    <field name="now_stage" readonly="1"/>
                    <field name="now_plan_fn" readonly="1"/>
                    <field name="days" readonly="1"/>
                    <field name="stage" readonly="1"/>
                    <field name="plan_date_st" readonly="1"/>
                    <field name="plan_date_fn" readonly="1"/>
                    <field name="real_date_st" readonly="1"/>
                    <field name="real_date_fn" readonly="1"/>
                    <field name="date_end" readonly="1"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="view_rep_site_search">
            <field name="name">view.rep.site</field>
            <field name="model">report.day.site</field>
            <field name="type">search</field>
            <field name="priority" eval="1"/>
            <field name="arch" type="xml">
                <search>
                    <group>
                        <!--<field name="date" />-->
                    </group>
                </search>
            </field>
        </record>

        <record id="action_rep_site_statistic" model="ir.actions.act_window">
            <field name="name">Ежедневный отчет</field>
            <field name="res_model">report.day.site</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="view_rep_site"/>
            <field name="search_view_id" ref="view_rep_site_search"/>
            <field name="context">{}</field>
        </record>


        <menuitem action="action_rep_site_statistic" id="menu_action_site_report" sequence="20" parent="process_site.menu_process_site" />
    </data>
</openerp>