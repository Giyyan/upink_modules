<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="view_reports_ppc_form" model="ir.ui.view">
            <field name="name">Финансовые отчеты - PPC</field>
            <field name="model">financial.reports.ppc</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form>
                    <field name="start_date" on_change="onchange_date(start_date, end_date)"/>
                    <field name="end_date" on_change="onchange_date(start_date, end_date)"/>
                    <field name="line_ids" readonly="1" nolabel="1" colspan="4">
                        <tree string="Отчет">
                            <field name="partner_id" />
                            <field name="service_id" />
                            <field name="invoice_id" />
                            <field name="specialist_id" />
                            <field name="paid_type" />
                            <field name="pay_date" />
                            <field name="total" />
                            <field name="close_date" />
                            <field name="carry_over_revenue" />
                            <field name="discount_up" />
                            <field name="discount_partner" />
                            <field name="discount_nds" />
                            <field name="co_costs_partner" />
                            <field name="costs_partner" />
                            <field name="co_costs_employee" />
                            <field name="costs_employee" />
                            <field name="profit" />
                        </tree>
                    </field>

                    <field name="state"/>
                </form>
            </field>
        </record>

        <record id="view_reports_ppc_tree" model="ir.ui.view">
            <field name="name">Финансовые отчеты - PPC</field>
            <field name="model">financial.reports.ppc</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="start_date"/>
                    <field name="end_date"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <!-- Quality Wizard -->
        <record id="action_reports_ppc" model="ir.actions.act_window">
            <field name="name">PPC</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">financial.reports.ppc</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_reports_ppc_tree"/>
            <field name="context">{}</field>
            <field name="domain">[]</field>
            <field name="target">inline</field>
        </record>

        <menuitem id="menu_direction_report_ppc" parent="menu_direction_report" action="action_reports_ppc" name="PPC" sequence="1"/>
    </data>
</openerp>