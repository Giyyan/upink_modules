        <record id="action_brief_add" model="ir.actions.act_window">
            <field name="name">Создать бриф на просчет</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">brief.main</field>
            <field name="view_type">form</field>
            <field name="view_id" ref="view_brief_form"/>
            <field name="target">new</field>
        </record>

        <record model="ir.ui.view" id="view_partner_form_upsale_inherit">
            <field name="model">res.partner</field>
            <field name="type">form</field>
            <field name="inherit_id" ref="res_partner_update.view_partner_form_upsale" />
            <field name="arch" type="xml">
                <field colspan="4" name="added_services_ids" position="after">
                    <separator colspan="4" string="Брифы на просчет"/>
                    <button name="create_brief" string="Создать бриф на просчет" type="object" default_focus="1" icon="terp-document-new" colspan="4"/>
                    <field name="brief_ids"
                           nolabel="1"
                           colspan="4"
                           context="{
                               'partner_id': id,
                               'partner_name': name,
                           }"
                            >
                        <tree string="Список брифов">
                            <field name="id"/>
                            <field name="user_id"/>
                            <field name="specialist_id"/>
                            <field name="create_date"/>
                            <field name="services_ids"/>
                            <field name="state"/>
                            <field name="usergroup"/>
                            <field name="responsible_user"/>
                            <field name="write_date"/>
                            <field name="accept_date"/>
                            <button string="Отправить бриф"
                                    name="action_accept"
                                    states="draft"
                                    icon="terp-gtk-go-back-rtl"
                                    />
                        </tree>
                    </field>


                </field>
            </field>
        </record>

